<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jan_paul.lolol.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 neighbourhoods"
        android:id="@+id/neighbourhoods"
        android:nestedScrollingEnabled="true"
        android:onClick="onNeighbourhoods"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="most stolen brands"
        android:id="@+id/moststolenbrands"
        android:nestedScrollingEnabled="true"
        android:onClick="onPie"
        android:layout_below="@+id/neighbourhoods"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Most stolen colors"
        android:id="@+id/moststolencolors"
        android:layout_below="@+id/moststolenbrands"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="onPie"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stolen bikes per month"
        android:layout_below="@+id/moststolencolors"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/moststolencolors"
        android:onClick="onLine"
        android:id="@+id/button" />


</RelativeLayout>
