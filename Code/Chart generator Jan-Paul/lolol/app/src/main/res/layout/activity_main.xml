<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jan_paul.lolol.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 neighbourhoods"
        android:id="@+id/neighbourhoods"
        android:nestedScrollingEnabled="true"
        android:onClick="onBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#ffeba1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="most stolen brands"
        android:id="@+id/moststolenbrands"
        android:nestedScrollingEnabled="true"
        android:onClick="onPie"
        android:layout_below="@+id/neighbourhoods"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#b1ffa1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Most stolen colors"
        android:id="@+id/moststolencolors"
        android:layout_below="@+id/moststolenbrands"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="onPie"
        android:nestedScrollingEnabled="false"
        android:backgroundTint="#a1ffeb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stolen bikes per month"
        android:layout_below="@+id/moststolencolors"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/moststolencolors"
        android:onClick="onLine"
        android:id="@+id/button"
        android:backgroundTint="#e6a1ff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="most stolen + containers"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button"
        android:onClick="onBar"
        android:backgroundTint="#ffa1a3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save location to calendar"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button2"
        android:backgroundTint="#fff1a1"
        android:onClick="onGpsToCalendar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save as note"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button3"
        android:onClick="onNote" />


</RelativeLayout>
